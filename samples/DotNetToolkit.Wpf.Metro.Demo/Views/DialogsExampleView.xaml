<UserControl x:Class="DotNetToolkit.Wpf.Metro.Demo.Views.DialogsExampleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center">
        <Button Margin="20"
                VerticalAlignment="Top"
                Click="ProgressTest_OnClick"
                Content="progress"
                FontSize="36"
                FontWeight="Thin" />
        <Button Margin="20"
                VerticalAlignment="Top"
                Click="MessageTest_OnClick"
                Content="message"
                FontSize="36"
                FontWeight="Thin" />
        <Button Margin="20"
                VerticalAlignment="Top"
                Click="InputTest_OnClick"
                Content="input"
                FontSize="36"
                FontWeight="Thin" />
        <Button Margin="20"
                VerticalAlignment="Top"
                Click="CustomTest_OnClick"
                Content="custom"
                FontSize="36"
                FontWeight="Thin" />
    </StackPanel>
</UserControl>
